{% extends "base_template.twig" %}
{% block title %}Toutes les recettes  - {{ constant('WEBSITE_TITLE') }} {% endblock %}

    {% block css %}
        <link rel="stylesheet" href="node_modules/datatables.net-bs5/css/dataTables.bootstrap5.min.css">
    {% endblock %}



{% block content %}
    <main class="row">
            <h1>Les recettes</h1>
                <div class="row ">
                    <div class="col">
                        <table id="table_recette" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Nom</th>
                                    <th>Catégorie</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for recette in recettes %}

                                <tr>
                                    <td><img src='image/{{ recette.image }}'
                                        class="img-thumbnail" alt=""></td>
                                    <td><a href="index.php?controleur=recette&methode=afficher&id={{ recette.id }}">{{ recette.nom }}</a></td>
                                    <td>{{ recette.categorie.nom }}</td>

                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
    </main>
        {% block script %}
            <!-- Jquery : dépendance pour datatable -->
            <script src="node_modules/jquery/dist/jquery.min.js"></script>
            <!-- Bootstrap JS -->
            <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <!-- DataTables JS avec Bootstrap 5 -->
            <script src="node_modules/datatables.net/js/dataTables.min.js"></script>
            <script src="node_modules/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
            <script src="js/messcripts.js"></script>

        {% endblock %}

{% endblock %}